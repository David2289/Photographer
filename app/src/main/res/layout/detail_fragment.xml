<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.detail.fragment.DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/commons_30dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Font.Regular.Title.Black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/commons_05dp"
            tools:text="Rodolfo"/>

        <TextView
            android:id="@+id/facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Font.Regular.Title.Black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/commons_50dp"
            tools:text="Facebook: ---"/>

        <TextView
            android:id="@+id/instagram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Font.Regular.Title.Black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/facebook"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/commons_05dp"
            tools:text="Instagram: ---"/>

        <TextView
            android:id="@+id/webpage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Font.Regular.Title.Black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/instagram"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/commons_05dp"
            tools:text="Web page: ---"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>